# =============================================================================
# DISCORD BOT + FASTAPI BACKEND + WEB DASHBOARD
# Environment Configuration
# =============================================================================
# Copy this file to .env.example and fill in your values
# NEVER commit .env.example to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/discord_bot
# For Docker: postgresql+asyncpg://postgres:password@postgres:5432/discord_bot

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://redis:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Discord Bot Configuration
# -----------------------------------------------------------------------------
# Get your token from: https://discord.com/developers/applications
DISCORD_TOKEN=your-discord-bot-token-here
DISCORD_PREFIX=!

# Bot API Key for secure communication with backend
# Generate with: openssl rand -hex 32
BOT_API_KEY=your-bot-api-key-here

# -----------------------------------------------------------------------------
# FastAPI Backend Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000
# For production: https://api.yourdomain.de

# Debug mode (set to false in production)
DEBUG=true

# -----------------------------------------------------------------------------
# Web Dashboard Configuration
# -----------------------------------------------------------------------------
DASHBOARD_URL=http://localhost:3000
# For production: https://dashboard.yourdomain.de

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Application secret key (for session encryption, CSRF, etc.)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-app-secret-key-change-this-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Minecraft RCON Configuration (Optional)
# -----------------------------------------------------------------------------
RCON_ENABLED=false
RCON_HOST=localhost
RCON_PORT=25575
RCON_PASSWORD=your-rcon-password

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics endpoint
METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
# Log file path (leave empty for stdout only)
LOG_FILE=

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------
# Set these in production
# ENVIRONMENT=production
# DEBUG=false
# API_URL=https://api.yourdomain.de
# DASHBOARD_URL=https://dashboard.yourdomain.de
# ALLOWED_HOSTS=api.yourdomain.de,dashboard.yourdomain.de
# CORS_ORIGINS=https://dashboard.yourdomain.de
